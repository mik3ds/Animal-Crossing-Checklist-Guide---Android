<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAboutSky">

    <ImageView
        android:id="@+id/iv_about_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/night"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/iv_about_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:text="@string/action_about"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="327dp"
        android:layout_height="452dp"
        android:background="@color/colorACMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for using this app"
                tools:layout_editor_absoluteX="74dp"
                tools:layout_editor_absoluteY="34dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright to Nintendo"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="395dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let me know about bugs here"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="71dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate the app 5 stars on the app store"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="169dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get in contact with me at :email at my domain"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="121dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made out of love for the series, please donate"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="302dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/imageView2"-->
        <!--            android:layout_width="292dp"-->
        <!--            android:layout_height="668dp"-->
        <!--            app:srcCompat="@drawable/ACme"-->
        <!--            tools:layout_editor_absoluteX="41dp"-->
        <!--            tools:layout_editor_absoluteY="217dp" />-->

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>